= form_with(model: artist) do |form|
  - if artist.errors.any?
    #error_explanation
      %h2
        = pluralize(artist.errors.count, "error")
        prohibited this artist from being saved:
      %ul
        - artist.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :permalink
    = form.text_field :permalink
  .field
    = form.label :bio
    = form.text_area :bio
  .field
    = form.label :formed_at
    = form.datetime_select :formed_at
  .field
    = form.label :verified
    = form.check_box :verified
  .field
    = form.label :verified_at
    = form.datetime_select :verified_at
  .field
    = form.label :avatar_url
    = form.text_area :avatar_url
  .field
    = form.label :cover_photo_url
    = form.text_area :cover_photo_url
  .actions
    = form.submit
