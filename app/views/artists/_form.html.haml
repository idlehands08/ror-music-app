= form_with(model: artist) do |form|
  - if artist.errors.any?
    #error_explanation
      %h2
        = pluralize(artist.errors.count, "error")
        prohibited this artist from being saved:
      %ul
        - artist.errors.each do |error|
          %li= error.full_message
  %div{class: 'flex flex-col items-start gap-2 max-w-5xl'}
    %div{class: 'flex flex-row items-center gap-2'}        
      %div{class: 'flex flex-col items-start gap-2 '}
        .flex.flex-row.gap-2.w-full.items-center
          = form.label :name, class:'w-2/5 font-bold'
          = form.text_field :name, class:'border-2 rounded border-solid px-2 py-1 w-full'
        .flex.flex-row.gap-2.w-full.items-center
          = form.label :permalink, class:'w-2/5 font-bold'
          = form.text_field :permalink, class:'border-2 rounded border-solid px-2 py-1 w-full'
      %div{class: 'flex flex-col items-start gap-2 max-w-lg'}
        .flex.flex-row.gap-2.w-full.items-center
          = form.label :avatar, class:'w-2/5 font-bold'
          = form.file_field :avatar, class:'border-2 rounded border-solid w-full py-1'
        .flex.flex-row.gap-2.w-full.items-center
          = form.label :cover_photo, class:'w-2/5 font-bold'
          = form.file_field :cover_photo, class:'border-2 rounded border-solid py-1 w-full'
    .flex.flex-row.gap-2.w-full.items-center
      = form.label :bio, class:'w-2/5 font-bold'
      = form.text_area :bio, class:'border-2 rounded border-solid px-2 py-1 w-full'
    .flex.flex-row.gap-2.w-full.items-center.justify-between
      = form.label :formed_at, class:'w-2/5 font-bold'
      = form.datetime_select :formed_at
    %div{class:'flex flex-row items-start justify-between w-full'}
      .flex.flex-row.gap-8.w-full.items-center
        = form.label :verified, class:'font-bold'
        = form.check_box :verified, class: 'h-5 w-5 text-green-600'
      .flex.flex-row.gap-2.w-full.items-center.justify-between
        = form.label :verified_at, class:'font-bold w-full'
        = form.datetime_select :verified_at
  %div{class: 'flex flex-row'}      
    .actions
      = form.submit
