%div{class: 'flex flex-row items-center justify-start gap-4 fixed'}
  %button{ class: 'py-2 px-4 bg-green-500 rounded' }= link_to 'New Artist', new_artist_path
%div{ class: 'flex flex-col items-center w-screen h-screen bg-black gap-4 text-gray-50' }
  %h1{ class: 'text-5xl m-10 font-bold' } Artists
  %div{ class: 'flex flex-row gap-10 w-4/5'}
    - @artists.each do |artist|
      %div{ class: 'flex flex-col border-solid rounded border p-0' }
        %div{ class:'p-4 flex flex-col items-center gap-4 w-80 text-center' }
          %h2.font-bold.text-2xl= artist.name
          %div
            - if artist.avatar.attached?
              = image_tag artist.avatar, class: 'w-48 rounded-full'
            - else
              = 'No Avatar'
          %div{ class: 'flex flex-col gap-2 text-center' }
            %h3= artist.permalink
            - if artist.verified?
              %h1 Verified
            - else  
              %h1 Not Verified
        %div{ class: 'flex flex-row w-full w-80 gap-1 px-4 py-2'}
          %h1{ class: 'italic underline' }= link_to 'Show', artist
          %h1{ class: 'italic underline' }= link_to 'Edit', edit_artist_path(artist)
          %h1{ class: 'italic underline' }= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' }
