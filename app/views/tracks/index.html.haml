%div{class:'flex flex-col items-center m-20'}
  %p#notice= notice
  %h1{class:'text-3xl font-bold'} Tracks
  %table
    %thead
      %tr
        %th Name
        %th Url
        %th Credits
        %th Length
        %th Available
        %th{:colspan => "3"}
    %tbody
      - @tracks.each do |track|
        %tr
          %td= track.name
          %td= track.url
          %td= track.credits
          %td= track.length
          %td= track.available
          %td= link_to 'Show', track
          %td= link_to 'Edit', edit_track_path(track)
          %td= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Track', new_track_path


